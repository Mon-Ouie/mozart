####################################################

# Test for spaces
SPACELOCAL = \
        basic nomosim queens
SPACEOZC = $(SPACELOCAL:%=./space/%.ozc)

# Tests for finite domains
FDLOCAL = \
        distribute \
        alpha

FDOZC = $(FDLOCAL:%=./fd/%.ozc)

# Tests for finite domains
FSLOCAL = \
        crew \
        hamming \
        steiner \
        knapsack \
        misc

FSOZC = $(FSLOCAL:%=./fs/%.ozc)

# Tests for scheduling
SCHEDLOCAL = \
        abz6
SCHEDOZC = $(SCHEDLOCAL:%=./scheduling/%.ozc)

FMODULES = \
        conversion float record type
MODULES = $(FMODULES:%=./modules/%.ozc)

# Other tests
OTHER = \
        link guards misc exception
OTHEROZC = $(OTHER:%=./%.ozc)


# All tests
COMPONENTS = \
        $(MODULES) $(SPACEOZC) $(FDOZC) $(FSOZC) $(SCHEDOZC) $(OTHEROZC)


####################################################

RM      = @RM@ -f
OZBATCH = @OZBATCH@
OZFLAGS = --nowarnunused

OZE = $(OZBATCH) $(OZFLAGS)
OZC = $(OZE) -c

all: oztest




oztest: ./lib/make-test.oz ./lib/engine.oz \
        ./lib/passed.oz ./lib/failed.oz ./lib/help-string.oz \
        $(COMPONENTS)
        $(OZE) -l AP,SP ./lib/make-test.oz
        ./make-test -verbose $(COMPONENTS)
        $(RM) ./make-test


clean:
        $(RM) *~ ./*/*~ ./*/*/*~
        $(RM) $(COMPONENTS)
        $(RM) make-test

veryclean: clean
        $(RM) oztest

distclean: veryclean
        $(RM) config.cache config.log config.status
        $(RM) Makefile

.SUFFIXES: $SUFFIXES .ozc .oz

.oz.ozc:
        $(OZC) $< -o $@
