SRCTOP=         @SRCTOP@
BUILDTOP=       @BUILDTOP@
PREFIX=         @prefix@
SRCDIR=         @srcdir@
VPATH=          @srcdir@
BINDIR=         $(PREFIX)/winbin

CXX=            @CXX@ @CXXFLAGS@
AR=             @AR@
WINDRES=        @WINDRES@

INCS=           -I. -I$(SRCDIR)
LIBS=           -L. -lstartup -luser32

INSTALL=        @INSTALL@
INSTALL_DIR=    @INSTALL_DIR@
INSTALL_FILE=   $(INSTALL) -m 444
INSTALL_BIN=    $(INSTALL) -m 555

CONSOLE_EXES = oztool.exe ozengine.exe
CONSOLE_BINS = ozwrapper.bin
WINDOWS_EXES = oz.exe ozenginew.exe
WINDOWS_BINS = ozwrapperw.bin
EXES = $(CONSOLE_EXES) $(CONSOLE_BINS) $(WINDOWS_EXES) $(WINDOWS_BINS)

LIBOBJS = \
        panic.o getenv.o path.o initenv.o makecmd.o \
        ppid.o process.o registry.o

.PHONY: all bootstrap install clean veryclean distclean depend check

.SUFFIXES: .cc .o .exe .bin

%.o: %.cc
        $(CXX) $(INCS) -c -o $@ $<

all: $(EXES)

bootstrap: all

libstartup.a: $(LIBOBJS)
        $(AR) rcs $@ $(LIBOBJS)

$(CONSOLE_EXES): %.exe: %.o res.o libstartup.a
        $(CXX) $(INCS) -s -o $@ $< res.o $(LIBS)

$(CONSOLE_BINS): %.bin: %.o libstartup.a
        $(CXX) $(INCS) -s -o $@ $< $(LIBS)

$(WINDOWS_EXES): %.exe: %.o res.o libstartup.a
        $(CXX) $(INCS) -s -o $@ $< res.o $(LIBS) -mwindows

$(WINDOWS_BINS): %.bin: %.o libstartup.a
        $(CXX) $(INCS) -s -o $@ $< $(LIBS) -mwindows

res.o: res.rc
        $(WINDRES) -i $< -o $@

version.h: $(SRCTOP)/OZVERSION
        echo "#define OZVERSION \"`$<`\"" > $@

oz.o ozengine.o ozenginew.o ozwrapper.o ozwrapperw.o oztool.o: startup.hh

$(LIBOBJS): startup.hh

registry.o: version.h

Makefile: Makefile.in config.status
        ./config.status

config.status: configure
        ./config.status --recheck

install: $(BINDIR) $(EXES:%=$(BINDIR)/%)

$(BINDIR):
        $(INSTALL_DIR) $@

$(BINDIR)/%.exe: %.exe
        $(INSTALL_BIN) $< $@

$(BINDIR)/%.bin: %.bin
        $(INSTALL_FILE) $< $@

clean:
        rm -f *.o *.a version.h

veryclean: clean
        rm -f $(EXES)

distclean: veryclean
        rm -f Makefile version.h config.cache config.log config.status

depend:

check:
