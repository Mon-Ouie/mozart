template <class Script, template<class> class Engine, class Options>
void
Example::run(const Options& o) {
  using namespace std;
  try {
    switch (o.mode()) {
    case EM_SOLUTION:
      {
        std::cout << o.name() << endl;
        Timer t;
        int i = o.solutions();
        t.start();
        Script* s = new Script(o);
        unsigned int n_p = s->propagators();
        unsigned int n_b = s->branchings();
        unsigned long int p = 0;
        Gecode::Search::Options so;
        so.c_d  = o.c_d();
        so.a_d  = o.a_d();
        so.stop = FailTimeStop::create(o.fail(), o.time());
        Engine<Script> e(s,so);
        delete s;
        do {
          Example* ex = e.next();
          if (ex == NULL)
            break;
          ex->print(std::cout);
          delete ex;
        } while (--i != 0);
        Gecode::Search::Statistics stat = e.statistics();
        std::cout << endl;
        std::cout << "Initial" << endl
             << "\tpropagators:   " << n_p << endl
             << "\tbranchings:    " << n_b << endl
             << endl
             << "Summary" << endl
             << "\truntime:       ";
        t.stop(std::cout); 
        std::cout << endl
             << "\tsolutions:     " 
             << abs(static_cast<int>(o.solutions()) - i) << endl
             << "\tpropagations:  " << p+stat.propagate << endl
             << "\tfailures:      " << stat.fail << endl
             << "\tclones:        " << stat.clone << endl
             << "\tcommits:       " << stat.commit << endl
             << "\tpeak memory:   "
             << static_cast<int>((stat.memory+1023) / 1024) << " KB"
             << endl;
      }
      break;
    case EM_STAT:
      {
        std::cout << o.name() << endl;
        int i = o.solutions();
        Script* s = new Script(o);
        unsigned int n_p = s->propagators();
        unsigned int n_b = s->branchings();
        unsigned long int p = 0;
        Gecode::Search::Options so;
        so.c_d  = o.c_d();
        so.a_d  = o.a_d();
        Engine<Script> e(s,so);
        delete s;
        do {
          Example* ex = e.next();
          if (ex == NULL)
            break;
          delete ex;
        } while (--i != 0);
        Gecode::Search::Statistics stat = e.statistics();
        std::cout << endl
             << "\tpropagators:   " << n_p << endl
             << "\tbranchings:    " << n_b << endl
             << "\tsolutions:     " 
             << abs(static_cast<int>(o.solutions()) - i) << endl
             << "\tpropagations:  " << p+stat.propagate << endl
             << "\tfailures:      " << stat.fail << endl
             << "\tclones:        " << stat.clone << endl
             << "\tcommits:       " << stat.commit << endl
             << "\tpeak memory:   "
             << static_cast<int>((stat.memory+1023) / 1024) << " KB"
             << endl;
      }
      break;
    case EM_TIME:
      {
        std::cout << o.name() << endl;
        Timer t;
        GECODE_AUTOARRAY(double,ts,o.samples());
        for (unsigned int s = o.samples(); s--; ) {
          t.start();
          for (unsigned int k = o.iterations(); k--; ) {
            unsigned int i = o.solutions();
            Script* s = new Script(o);
            Gecode::Search::Options so;
            so.c_d  = o.c_d();
            so.a_d  = o.a_d();
            Engine<Script> e(s,so);
            delete s;
            do {
              Example* ex = e.next();
              if (ex == NULL)
                break;
              delete ex;
            } while (--i != 0);
          }
          ts[s] = t.stop() / o.iterations();
        }
        double m = am(ts,o.samples());
        double d = dev(ts,o.samples()) * 100.0;
        std::cout << "\tRuntime: "
             << setw(20) << right
             << showpoint << fixed
             << setprecision(6) << m << "ms"
             << setprecision(2) << " (" << d << "% deviation)"
             << endl;
      }
      break;
      /*#ifdef GECODE_HAS_GIST
    case EM_GIST:
      {
        Gist::PrintingInspector<Script> pi(o.name());
        Script* s = new Script(o);
        (void) GistEngine<Engine<Script> >::explore(s, &pi);
        delete s;
      }
      break;
      #endif*/
    }
  } catch (Gecode::Exception e) {
    std::cout << "Exception: " << e.what() << "." << endl
         << "Stopping..." << endl;
  }
}

