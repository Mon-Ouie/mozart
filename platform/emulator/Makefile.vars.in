VPATH           = @srcdir@
SRCDIR          = @srcdir@
TOPDIR          = @TOPDIR@
SHELL           = @SH@
LEX             = @LEX@
LFLAGS          = -8
YACC            = @YACC@
YFLAGS          = -d
MV              = @MV@
SED             = @SED@
ECHO            = @@ECHO@
M4A             = -DOZINCDIR=$(TOPDIR)/include -DOZSRCDIR=$(SRCDIR)
M4              = @M4@ $(M4A)
M4_S            = @M4_S@ $(M4A)
RM              = @RM@ -f
CXX             = @CXX@
CXXCPP          = @CXXCPP@
LD              = @LD@
DYNLD           = @DYNLD@
RANLIB          = @RANLIB@
AR              = @AR@

INSTALL         = @INSTALL@
INSTALL_DIR     = $(TOPDIR)/mkinstalldirs
INSTALL_BIN     = $(INSTALL) -m 555
INSTALL_OTHER   = $(INSTALL) -m 444
LIBS            = @LIBS@
LDFLAGS         = @LDFLAGS@

DEFS            = @DEFS@
CWARN           = @CWARN@
INCS            = -I. -I$(SRCDIR) -I$(TOPDIR)/include
CPPFLAGS        = @CPPFLAGS@ $(INCS) $(DEFS)
CFLAGS          = @CFLAGS@ $(CWARN) $(CUSR)
CXXFLAGS        = $(CFLAGS)
DEPEND          = @DEPEND@ $(CPPFLAGS)

PREFIX          = @prefix@
PLATFORM        = @platform@
PLATFORMDIR     = $(PREFIX)/platform
BINDIR          = $(PLATFORMDIR)/$(PLATFORM)
INCDIR          = $(PREFIX)/include
