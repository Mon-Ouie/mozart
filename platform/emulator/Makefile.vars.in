BUILDTOP=	@BUILDTOP@
SRCTOP=		@SRCTOP@
TESTDIR=	$(BUILDTOP)/share/test
LIBDIR=		$(BUILDTOP)/share/lib
PREFIX=		@prefix@

BINDIR=		$(PREFIX)/platform/$(PLATFORM)
INCDIR=		$(PREFIX)/include

SHELL=		/bin/sh
LEX=		@LEX@
LFLAGS=		-8
YACC=		@YACC@
YFLAGS=		-d
M4=		@M4@
M4_S=		@M4_S@
CXX=		@CXX@
CXXCPP=		@CXXCPP@

LD=		@LD@
DYNLD=		@DYNLD@
RANLIB=		@RANLIB@
AR=		@AR@

INSTALL=	@INSTALL@
INSTALL_DIR= 	@INSTALL_DIR@
INSTALL_SRC= 	@INSTALL_SRC@
INSTALL_BIN=	$(INSTALL) -m 555
INSTALL_FILE=	$(INSTALL) -m 444

STATIC_MODULELIBS= -L. -lwif -lfd -lschedule -lfset -lparser
LIBS=		   @LIBS@
LDFLAGS=	   @LDFLAGS@ $(CUSR)

DEFS=		@DEFS@
OZ_WARN=	@oz_warn@
OZ_WARN_ERROR=	@oz_warn_error@
CPPFLAGS=	@CPPFLAGS@ $(INCS) $(DEFS)
COPT=		@COPT@
CXXFLAGS=	@CXXFLAGS@ $(COPT) $(OZ_WARN) $(OZ_WARN_ERROR) $(CUSR)
CXXFLAGS_NO_ERROR= @CXXFLAGS@ $(COPT) $(OZ_WARN) $(CUSR)
DEPEND=		@DEPEND@ $(CPPFLAGS)

PLATFORM=	@platform@

OZVERSION=	$(SRCTOP)/OZVERSION
