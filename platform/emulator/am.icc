INLINE
void AM::changeSelf(Object *o)
{
  Object *oldSelf = cachedSelf;
  if(o != oldSelf) {
    cachedStack->pushSelf(oldSelf);
    cachedSelf = o;
  }
}

INLINE
void AM::saveSelf()
{
  if (cachedSelf != 0) {
    currentThread()->setSelf(cachedSelf);
    cachedSelf = 0;
  }
}

