include ../Makefile.vars

BUILDTOP	= @BUILDTOP@
VPATH		= @srcdir@
SRCDIR		= @srcdir@
INCS		= -I. -I$(SRCDIR)/.. -I..

FSETLIBSRCS =	standard.cc telling.cc \
		testing.cc fsaux.cc \
		intsets.cc monitor.cc \
		reified.cc fsstd.cc \
		std_n.cc table.cc \
		fsinit.cc

FSETLIBOBJS = $(FSETLIBSRCS:.cc=.o)

all: $(FSETTARGETS)

../FSP.so: $(FSETLIBOBJS)
	$(DYNLD) -o $@ $(FSETLIBOBJS)

../libFSP.a: $(FSETLIBOBJS)
	$(AR) -rc $@ $(FSETLIBOBJS) && $(RANLIB) $@

depend:: $(FSETLIBSRCS) 
	$(DEPEND) $(FSETLIBSRCS:%=$(SRCDIR)/%) > Makefile.deps

Makefile: Makefile.in
	(cd ..;./config.status)

-include Makefile.deps

veryclean::
	-rm -f *.a *.so Makefile.deps

include ../Makefile.rules

distclean::
	-rm -f Makefile
