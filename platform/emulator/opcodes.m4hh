#ifndef __OPCODESH
#define __OPCODESH

#include "base.hh"

typedef enum {

define(`OPCODE',0) dnl
define(readArg,$1)
define(writeArg,$1)
define(instruction,
        `ifelse(numOfRegs($2,$3,$4),1,oneReg(TOUPPER($1)),
                numOfRegs($2,$3,$4),2,twoRegs(TOUPPER($1)),
                TOUPPER($1) = `OPCODE,') dnl
         incrop(1) dnl
')

define(oneReg,
        `$1X = `OPCODE,'
         $1Y = `incrop(1)OPCODE,'
         $1G = `incrop(1)OPCODE,'
         `dnl'
')

define(twoRegs,
        `$1XX = `OPCODE,'
         $1XY = `incrop(1)OPCODE,'
         $1XG = `incrop(1)OPCODE,'
         $1YX = `incrop(1)OPCODE,'
         $1YY = `incrop(1)OPCODE,'
         $1YG = `incrop(1)OPCODE,'
         $1GX = `incrop(1)OPCODE,'
         $1GY = `incrop(1)OPCODE,'
         $1GG = `incrop(1)OPCODE,'
         `dnl'
')


include(EMUDIR/instrDefs.m4)



OZERROR  /* this should always be the last one */
} Opcode;



class OpcodeInfo {
public:
  char *printname;
  int size;
};

extern OpcodeInfo opcodes[];

inline
int sizeOf(Opcode oc)
{
  Assert((int)oc < OZERROR);
  return opcodes[(int)oc].size;
}

inline
char *opcodeToString(Opcode oc)
{
  Assert((int)oc < OZERROR);
  return opcodes[(int)oc].printname;
}

Opcode stringToOpcode(const char *s);

#endif
