include ../Makefile.vars

BUILDTOP        = @BUILDTOP@
VPATH           = @srcdir@
SRCDIR          = @srcdir@
INCS            = -I. -I$(SRCDIR)/.. -I..

FDLIBSRCS = arith.cc fdaux.cc bool.cc \
            card.cc cd.cc count.cc \
            rel.cc disjoint.cc std.cc \
            sum.cc sumequal.cc \
            distance.cc streamProps.cc \
            sumd.cc sumabs.cc complalldist.cc diffn.cc \
            distribute.cc fdtable.cc

FDLIBOBJS = $(FDLIBSRCS:.cc=.o)

SCHEDLIBSRCS = \
            scheduling.cc schedulingDist.cc \
            schedulingDistAux.cc taskintervals.cc  \
            schedtable.cc

SCHEDLIBOBJS = $(SCHEDLIBSRCS:.cc=.o)


all:

# NOTE: $(SRCDIR) added to the dependencies, because in ../Makefile.in the libs
#       depend also on this dir
../FDP.so: $(FDLIBOBJS) $(SRCDIR)
        $(DYNLD) -o $@ $(FDLIBOBJS)

../libFDP.a: $(FDLIBOBJS) $(SRCDIR)
        $(AR) -rc $@ $(FDLIBOBJS) && $(RANLIB) $@

../Schedule.so: $(SCHEDLIBOBJS) $(SRCDIR)
        $(DYNLD) -o $@ $(SCHEDLIBOBJS)

../libSchedule.a: $(SCHEDLIBOBJS) $(SRCDIR)
        $(AR) -rc $@ $(SCHEDLIBOBJS) && $(RANLIB) $@

depend:: Makefile $(FDLIBSRCS) $(SCHEDLIBSRCS)
        $(DEPEND) $(FDLIBSRCS:%=$(SRCDIR)/%) $(SCHEDLIBSRCS:%=$(SRCDIR)/%) \
                > Makefile.deps

-include Makefile.deps
include ../Makefile.rules

distclean::
        -rm -f Makefile

veryclean::
        -rm -f *.a *.so Makefile.deps
