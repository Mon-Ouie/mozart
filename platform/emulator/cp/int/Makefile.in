
include ../../Makefile.vars

BUILDTOP	= @BUILDTOP@
VPATH		= @srcdir@
SRCDIR		= @srcdir@
INCS		= -I$(SRCDIR) -I. -I$(SRCDIR)/../.. -I../..


GECODE_LIBS	= @GECODE_LIBS@
GECODE_INC	= @GECODE_INC@
#LDFLAGS		= @GECODE_LDFLAGS@


CFLAGS 		= $(INCS) $(GECODE_INC) $(GESPACE_CXXFLAGS) $(CPPFLAGS) -DBUILD_GECODE

MODULE_SPEC	= modGeIntVar.spec

GENERATED_FILES = $(MODULE_SPEC:.spec=-table.cc)


GFDLIBSRC	= GeIntVar.cc GeIntVar-builtins.cc GeIntProp-builtins.cc GeMozProp-builtins.cc
GFDLIBOBJS	= $(GFDLIBSRC:.cc=.o)


FCPDECL		= $(SRCDIR)/../../bidecl.perl

all:

# NOTE: $(SRCDIR) added to the dependencies, because in ../../Makefile.in the libs
#       depend also on this dir

../../geoz.so-$(PLATFORM): first $(GFDLIBOBJS)
	$(DYNLD) -o $@ $(GFDLIBOBJS) $(LDFLAGS) $(GECODE_LIBS)

%.o: %.cc
	$(CXX) $(OPTIMIZE) $(CFLAGS) -c $< -o $@


-include Makefile.deps
include ../../Makefile.rules

first: $(GENERATED_FILES)

%-table.cc: %.spec
	$(PERL) $(FCPDECL) -file $< -interface > $@ || { rm -f $@; exit 1; }

distclean::
	-rm -f Makefile makefile

veryclean::
	-rm -f *.a *.so-$(PLATFORM) TAGS Makefile.deps

cleaner::
	-rm -f *.a *.so-$(PLATFORM)


BUILDDIR=$(shell pwd)
tags:	$(CREATEDFILES)
	etags \
	--regex='/OZ_BI_\(io\)?define([ 	]*\([^ 	,)]+\)/\2/' \
	--regex='/OZ_C_\(io\)?proc_begin([ 	]*\([^ 	,)]+\)/\2/' \
	--regex='/OZ_DECLARE[A-Z0-9_]*([ 	]*\([^ 	,)]+\)/\1/' -l c++ \
	-o $(SRCDIR)/TAGS \
	$(addprefix $(BUILDDIR)/,$(CREATEDFILES)) \
	$(SRCDIR)/*c $(SRCDIR)/*h $(SRCDIR)/../*c $(SRCDIR)/../*h  
