dnl Process this file with autoconf to produce a configure script.

dnl This will check that we are in the Oz directory and initiate

AC_INIT(oz.h)

AC_CANONICAL_HOST

AC_PROG_MAKE_SET

dnl Checks for programs.
AC_PROG_CXX
AC_PROG_CC
AC_PROG_INSTALL
AC_PROG_LN_S
#AC_PROG_MAKE_SET

AC_CHECK_PROGS(M4, gm4 m4)
AC_CHECK_PROGS(RM, rm)
AC_CHECK_PROGS(SH, sh bash)
AC_CHECK_PROGS(MV, mv)
AC_CHECK_PROGS(ECHO, echo true)
AC_CHECK_PROGS(SED, gnused sed)

case "$host" in
i?86-*-linux)
	AC_DEFINE(LINUX_I486)
	platform=linux-i486
	;;
sparc-sun-sunos4*)
	AC_DEFINE(SUNOS_SPARC)
	platform=sunos-sparc
	;;
sparc-sun-solaris*)
	AC_DEFINE(SOLARIS_SPARC)
	platform=solaris-sparc
	;;
aix-*)
	;;
esac

OzPlatform=$platform
psdir=/project/ps
AC_MSG_CHECKING(for dir $psdir/lib/$platform)
if test -d $psdir/lib/$platform
then
  LIBS="$LIBS -L$psdir/lib/$platform"
  AC_MSG_RESULT(yes)
else
  AC_MSG_RESULT(no)
fi

AC_MSG_CHECKING(for dir $HOME/lib/$platform)
if test -d $HOME/lib/$platform
then
  LIBS="$LIBS -L$HOME/lib/$platform"
  AC_MSG_RESULT(yes)
else
  AC_MSG_RESULT(no)
fi

AC_MSG_CHECKING(for --with-threaded)
AC_ARG_WITH(threaded,
  [--with-threaded       threaded code emulator (default=yes)])
if test "x$with_threaded" != xno; then
        AC_MSG_RESULT(yes)
        AC_DEFINE(THREADED)
else
        AC_MSG_RESULT(no)
fi
AC_MSG_CHECKING(for --with-fastreg)
AC_ARG_WITH(fastreg,
  [--with-fastreg	fast register access (default=yes)])
if test "x$with_fastreg" != xno; then
        AC_MSG_RESULT(yes)
        AC_DEFINE(FASTREGACCESS)
else
        AC_MSG_RESULT(no)
fi
AC_MSG_CHECKING(for --with-regopt)
AC_ARG_WITH(regopt,
  [--with-regopt	register optimization (default=yes)])
if test "x$with_regopt" != xno; then
        AC_MSG_RESULT(yes)
        AC_DEFINE(REGOPT)
else
        AC_MSG_RESULT(no)
fi


AC_MSG_CHECKING(for --with-linkprop)
AC_ARG_WITH(linkprop,
  [--with-dlinkprop	link propagators statically (default=yes)])
if test "x$with_dlinkprop" != xno; then
        AC_MSG_RESULT(yes)
	AC_DEFINE(FOREIGNFDPROPS)
	POBJ="\$(PROPOBJ)"
else
	POBJ=""
        AC_MSG_RESULT(no)
fi

