BUILDTOP	= @BUILDTOP@
PREFIX		= @prefix@
VPATH		= @srcdir@
SRCTOP		= @SRCTOP@
SRCDIR		= @SRCDIR@
DOCDIR		= $(PREFIX)/doc

INSTALL		= @INSTALL@
INSTALL_FILE	= $(INSTALL) -m 444
INSTALL_DIR	= @INSTALL_DIR@

AWK		= @AWK@

include ../Makefile.vars

DOCFILES0=Mozart.hhp Mozart.hhc
DOCFILES=$(DOCFILES0:%=$(DOCDIR)/%)

.PHONY: bootstrap bootquick all clean veryclean distclean quick boot-quick install installps

all: Mozart.hhp Mozart.hhc

Mozart.hhp: Mozart.hhp.in
	(cat $<; for i in $(DOC_DIRS); do echo $$i/page.gif; done) > $@

Mozart.hhc: Mozart.hhc.in
	$(AWK) -f $(SRCDIR)/preprocess.awk < $< > $@ || \
	rm -f $@

quick:
depend:

bootstrap: boot-all
bootquick: boot-all
boot-quick: boot-all

# make it possible to configure and build just the doc
-include $(BUILDTOP)/share/Makefile.boot

bootstrap: boot-all

Makefile: Makefile.in config.status
	./config.status

install: $(DOCDIR) $(DOCFILES)

installps:

$(DOCDIR):
	$(INSTALL_DIR) $@

$(DOCDIR)/%: %
	$(INSTALL_FILE) $< $@

clean:
	rm -rf Mozart.hhp Mozart.hhc

veryclean: clean

distclean: veryclean
	rm -f Makefile config.log config.status config.cache
