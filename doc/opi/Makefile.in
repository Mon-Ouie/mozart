PREFIX          = @prefix@
VPATH           = @srcdir@
SRCDIR          = @srcdir@
BUILDTOP        = @BUILDTOP@
SRCTOP          = @SRCTOP@
OZENGINE        = @OZENGINE@
OZDOC           = @OZDOC@
OZDOCFLAGS      =
DOCIFY          = $(OZENGINE) $(OZDOC) $(OZDOCFLAGS)

DOCDIR          = /www/mozart/opi

INSTALL         = @INSTALL@
INSTALL_FILE    = $(INSTALL) -m 444
INSTALL_BIN     = $(INSTALL) -m 555
INSTALL_DIR     = @INSTALL_DIR@

SGMLSRCS = \
        opi.sgml
ELSRCS = \
        oz.el
GIFSRCS = \
        menu.gif

.PHONY: all validate install clean veryclean distclean

all: opi-html

include $(SRCDIR)/../../share/Makefile.boot

bootstrap: boot-all

Makefile: Makefile.in ../config.status
        cd .. && ./config.status

opi-html: $(SGMLSRCS) $(ELSRCS) $(GIFSRCS)
        $(DOCIFY) --in=$(SRCDIR)/opi.sgml --out=$@ --type=html-stylesheets && \
        cp -p $(addprefix $(SRCDIR)/,$(GIFSRCS)) $@

opi-tex: $(SGMLSRCS)
        $(DOCIFY) --in=$(SRCDIR)/opi.sgml --out=opi-tex --type=latex

validate: opi-html
        nsgmls -cHTML4.soc -sB opi-html/*.html

install: opi-html $(DOCDIR)
        cp -p opi-html/* $(DOCDIR)

$(DOCDIR):
        $(INSTALL_DIR) $@

clean:
        -rm -rf opi-html
        -rm -rf opi-tex
        -rm -f *~

veryclean: clean

distclean: veryclean
        -rm -f Makefile
