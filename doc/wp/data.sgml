<section id="section.data.text">
  <title/Text Widgets/

<p>
<chunk id="data.text.toy"><title/Sample ToyText/
hyper(canvas:
         e(head:'Canvas'
           body:['A canvas widget displays items. '
                 'An item is of one the following types: '
                 a(ref:arc       ['arc']) ', '
                 a(ref:bitmap    ['bitmap']) ', '
                 a(ref:image     ['image']) ', '
                 a(ref:line      ['line']) ', '
                 a(ref:oval      ['oval']) ', '
                 a(ref:polygon   ['polygon']) ', '
                 a(ref:rectangle ['rectangle']) ', '
                 a(ref:text      ['text']) ', and '
                 a(ref:window    ['window']) '.'])
      arc:
         e(head:'Arc'
           body:['An arc item displays a piece of a circle.'])
      bitmap:
         e(head:'Bitmap'
           body:['A bitmap item displays a bitmap with a given name.'])
      image:
         e(head:'Image'
           body:['Displays an image.'])
      line:
         e(head:'Line'
           body:['A line item consists of several connected segments.'])
      oval:
         e(head:'Oval'
           body:['An oval can either be a circle or an ellipsis.'])
      polygon:
         e(head:'Polygon'
           body:['A polygon is described by three or more '
                 a(ref:line ['line']) ' segments.'])
      rectangle:
         e(head:'Rectangle'
           body:['Displays a rectangle.'])
      text:
         e(head:'Text'
           body:['Displays text consisting of a single or several lines.'])
      window:
         e(head:'Window'
           body:['Displays a widget in the canvas where the canvas '
                 'widget serves as geometry manager for the widget. '
                 'See also ' a(ref:canvas ['the canvas widget']) '.']))
</chunk>


