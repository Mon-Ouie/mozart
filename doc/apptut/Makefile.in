SRCTOP		= @SRCTOP@
SRCDIR		= @srcdir@
VPATH		= @srcdir@

WHAT = apptut
MAIN = main.sgml
SGMLSRCS = \
	deploy.sgml devel.sgml hello.sgml link.sgml \
	module.sgml cs-intro.sgml cs-db.sgml \
	cs-ozc.sgml native-celloid.sgml native-counter.sgml \
	native-counter-obj.sgml chat.sgml \
	conc-cheap.sgml conc-patterns.sgml
HTMLEXTRAFILES =
CHUNKFILES = \
	chat-server.oz chat-client.oz chat-gui.oz Webget.oz

include ../Makefile.common

all:: $(CHUNKFILES)
quick:: $(CHUNKFILES)

chat-server.oz: $(MAIN) $(SGMLSRCS)
	$(DOCIFY) --type=chunk --in=$< --out='Chat Server' >$@
chat-client.oz: $(MAIN) $(SGMLSRCS)
	$(DOCIFY) --type=chunk --in=$< --out='Chat Client' >$@
chat-gui.oz: $(MAIN) $(SGMLSRCS)
	$(DOCIFY) --type=chunk --in=$< --out='Chat GUI' >$@
Webget.oz: $(MAIN) $(SGMLSRCS)
	$(DOCIFY) --type=chunk --in=$< --out='Webget.oz' >$@

install:: $(CHUNKFILES)
	for i in $(CHUNKFILES); do $(INSTALL_FILE) $$i $(DOCDIR); done
