  <section id="section.">
    <title/Our First Application: <kbd/webget//

<chunk><title/Webget/
functor
   import Application Open
define
   Args = {Application.getArgs record}
   
   I = {New Open.file init(url:  Args.'in')}
   O = {New Open.file init(name: Args.'out' 
                           flags:[write create truncate])}

   proc {Copy}
      S={I read(list:$)}
      if S\=nil then
         {O write(vs:S)} 
         {Copy}
      end
   end

   {Copy}

   {Application.exit 0}

end
</chunk>


    <p>
      <kbd/webget/: downloading files from the www.
