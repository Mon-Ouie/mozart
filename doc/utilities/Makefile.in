PREFIX          = @prefix@
VPATH           = @srcdir@
SRCDIR          = @srcdir@
BUILDTOP        = @BUILDTOP@
SRCTOP          = @SRCTOP@
BINDIR          = $(PREFIX)/bin
DOCDIR          = $(PREFIX)/share/doc
ELISPDIR        = $(PREFIX)/share/elisp
CSSDIR          = /www/css
HOMEURL         = @HOMEURL@


INSTALL         = @INSTALL@
INSTALL_DIR     = @INSTALL_DIR@
INSTALL_BIN     = $(INSTALL) -m 555
INSTALL_FILE    = $(INSTALL) -m 444

OZFLAGS         =
OZC             = @OZC@
OZL             = @OZL@
EMACS           = emacs
OZENGINE        = @OZENGINE@

FUNCTORS = \
        SGML.ozf AuthorDB.ozf BibliographyDB.ozf Indexer.ozf Fontifier.ozf \
        CrossReferencer.ozf Thumbnails.ozf LaTeXToGIF.ozf PostScriptToGIF.ozf \
        File.ozf HTML.ozf OzDocToHTML.ozf Main.ozf

SYSLETS = ozdoc
ELS = ozdoc.el
ELCS = $(ELS:%.el=%.elc)
SHELLSCRIPTS = fontify latex2gif gif2thumbnail

BINFILES = $(SYSLETS:%=$(BINDIR)/%)
DOCBINFILES = $(SHELLSCRIPTS:%=$(DOCDIR)/%)
DOCFILES = $(DOCDIR)/html.bst
ELISPFILES = $(ELS:%=$(ELISPDIR)/%) $(ELCS:%=$(ELISPDIR)/%)
CSSFILES = $(CSSDIR)/ozdoc.css $(CSSDIR)/page.gif

.PHONY: bootstrap all clean veryclean distclean

all: $(FUNCTORS) $(SYSLETS) $(ELCS)

include $(SRCTOP)/share/Makefile.boot

bootstrap: boot-all

Makefile: Makefile.in config.status
        ./config.status

ozdoc: $(FUNCTORS)
        $(OZL) -z 9 -x Main.ozf -o $@

%.ozf: %.oz
        $(OZC) $(OZFLAGS) -c $< -o $@

%.elc: %.el
        -rm -f $@
        $(EMACS) -q -batch -f batch-byte-compile $<
        if [ $<c != $@ ]; then mv $<c $@; fi

install: $(BINDIR) $(BINFILES)
install: $(DOCDIR) $(DOCBINFILES) $(DOCFILES)
install: $(ELISPDIR) $(ELISPFILES)
install: $(CSSDIR) $(CSSFILES)

$(BINDIR) $(DOCDIR) $(ELISPDIR) $(CSSDIR):
        $(INSTALL_DIR) $@

$(BINFILES): $(BINDIR)/% : %
        $(INSTALL_BIN) $< $@

$(DOCBINFILES): $(DOCDIR)/% : %
        $(INSTALL_BIN) $< $@

$(DOCFILES): $(DOCDIR)/% : %
        $(INSTALL_FILE) $< $@

$(ELISPFILES): $(ELISPDIR)/% : %
        $(INSTALL_FILE) $< $@

$(CSSFILES): $(CSSDIR)/% : %
        $(INSTALL_FILE) $< $@

clean:
        rm -rf $(FUNCTORS) $(SYSLET) $(ELCS)

veryclean: clean

distclean: veryclean
        rm -f Makefile config.log config.status config.cache
