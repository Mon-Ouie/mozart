# of this file, and for a DISCLAIMER OF ALL
# WARRANTIES.
#

if [ $# -ne 3 ]
then
    echo usage: `basename $0` \<input file\> \<count\> \<output dir\> 1>&2
    exit 2
fi

infile=$1
count=$2
outdir=$3

tmpdir=/tmp/ps2gif.$$
mkdir $tmpdir
cp $infile $tmpdir/x.tex

(cd $tmpdir

latex x 1>&2 || exit 1
dvips x.dvi -o x.ps 1>&2

mkfifo moo

gs -dTextAlphaBits=4 -dGraphicsAlphaBits=4 -r102 \
-sDEVICE=ppmraw -sOutputFile=latex%d.ppm x.ps < moo |
(
    i=0
    while [ $i -lt $count ]; do
        exit=no
        while [ $exit ]; do
            read line
            echo $line 1>&2
            case $line in
            *showpage*)
                exit=""
                ;;
            *)
                ;;
            esac
        done
        i=`expr $i + 1`
        pnmcrop < latex$i.ppm |
        ppmtogif -interlace -transparent rgbi:1/1/1 > $outdir/latex$i.gif
        rm latex$i.ppm
        echo Wrote latex$i.gif 1>&2
        echo
    done
    echo quit
    ) > moo
)

rm -rf $tmpdir

exit 0
