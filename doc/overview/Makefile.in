SRCTOP		= @SRCTOP@
SRCDIR		= @srcdir@
VPATH		= @srcdir@
PREFIX		= @prefix@

INSTALL		= @INSTALL@
INSTALL_FILE	= $(INSTALL) -m 444
INSTALL_DIR	= @INSTALL_DIR@
WHAT		= overview
DOCDIR		= $(PREFIX)/doc/$(WHAT)

FILES = index.html getstarted.html tutorials.html reference.html \
	ozdoc.css page.gif overview.gif

all:
quick:
clean:
veryclean:
depend:
check:
distclean:
bootstrap:

install: $(DOCDIR) $(addprefix $(DOCDIR)/,$(FILES))
$(DOCDIR):
	$(INSTALL_DIR) $(DOCDIR)
$(DOCDIR)/%: %
	$(INSTALL_FILE) $< $@
$(DOCDIR)/ozdoc.css: $(SRCDIR)/../utilities/ozdoc.css
	$(INSTALL_FILE) $< $@
$(DOCDIR)/%.gif: $(SRCDIR)/../utilities/%.gif
	$(INSTALL_FILE) $< $@

Makefile: $(SRCDIR)/Makefile.in ../config.status
	cd .. && ./config.status
