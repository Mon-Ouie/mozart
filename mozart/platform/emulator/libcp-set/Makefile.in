include ../Makefile.vars

BUILDTOP	= @BUILDTOP@
VPATH		= @srcdir@
SRCDIR		= @srcdir@
INCS		= -I$(SRCDIR) -I. -I$(SRCDIR)/.. -I..


GECODE_LIBS	= `pkg-config --libs gecode`
GECODE_INC	= `pkg-config --cflags gecode`

CFLAGS 		= $(INCS) $(GECODE_INC) $(GESPACE_CXXFLAGS) $(CPPFLAGS) 


GFSBLIBSRC	= SetValue.cc GeSetVar.cc GeSetVar-builtins.cc
GFSBLIBOBJS	= $(GFSBLIBSRC:.cc=.o)

GFSPLIBSRC	= GeSetProp-builtins.cc GeFSP-Builtins.cc
GFSPLIBOBJS	= $(GFSPLIBSRC:.cc=.o)


all:

# NOTE: $(SRCDIR) added to the dependencies, because in ../../Makefile.in the libs
#       depend also on this dir

../GFSB.so-$(PLATFORM): $(GFSBLIBOBJS) 
	$(DYNLD) -o $@ $(GFSBLIBOBJS) $(LDFLAGS) $(GECODE_LIBS)
	
../libGFSB.a: $(GFSBLIBOBJS)
	$(AR) -rc $@ $(GFSBLIBOBJS) && $(RANLIB) $@
	
../GFSP.so-$(PLATFORM): $(GFSPLIBOBJS) 
	$(DYNLD) -o $@ $(GFSPLIBOBJS) $(LDFLAGS) $(GECODE_LIBS)
	
../libGFSP.a: $(GFSPLIBOBJS)
	$(AR) -rc $@ $(GFSPLIBOBJS) && $(RANLIB) $@
	

depend:: Makefile $(GFSBLIBSRC) $(GFSPLIBSRC)
	$(DEPEND) $(GFSBLIBSRC:%=$(SRCDIR)/%) $(GFSPLIBSRC:%=$(SRCDIR)/%) \
		| sed -e 's/\.o:/\.lo:/g' > Makefile.deps

%.o: %.cc
	$(CXX) $(OPTIMIZE) $(CFLAGS) -c $< -o $@

first:

Makefile: Makefile.in
	(cd ..; ./config.status)

-include Makefile.deps
include ../Makefile.rules

distclean::
	-rm -f Makefile makefile $(GENERATED_FILES)

veryclean::
	-rm -f *.a *.so-$(PLATFORM) TAGS Makefile.deps $(GENERATED_FILES)

cleaner::
	-rm -f *.a *.so-$(PLATFORM) $(GENERATED_FILES)


BUILDDIR=$(shell pwd)
tags:	$(CREATEDFILES)
	etags \
	--regex='/OZ_BI_\(io\)?define([ 	]*\([^ 	,)]+\)/\2/' \
	--regex='/OZ_C_\(io\)?proc_begin([ 	]*\([^ 	,)]+\)/\2/' \
	--regex='/OZ_DECLARE[A-Z0-9_]*([ 	]*\([^ 	,)]+\)/\1/' -l c++ \
	-o $(SRCDIR)/TAGS \
	$(addprefix $(BUILDDIR)/,$(CREATEDFILES)) \
	$(SRCDIR)/*c $(SRCDIR)/*h $(SRCDIR)/../*c $(SRCDIR)/../*h  
