include ../Makefile.vars

BUILDTOP	= @BUILDTOP@
VPATH		= @srcdir@
SRCDIR		= @srcdir@
INCS		= -I$(SRCDIR) -I. -I$(SRCDIR)/.. -I..


GECODE_LIBS	= `pkg-config --libs "gecode = ${GECODEVERSION}"`
GECODE_INC	= `pkg-config --cflags "gecode = ${GECODEVERSION}"`

CFLAGS 		= $(INCS) $(GECODE_INC) $(GESPACE_CXXFLAGS) $(CPPFLAGS) 


GBDBLIBSRC	= GeBoolVar.cc GeBoolVar-builtins.cc
GBDBLIBOBJS	= $(GBDBLIBSRC:.cc=.o)

GBDPLIBSRC	= GeBoolProp-builtins.cc GeBDP-Builtins.cc
GBDPLIBOBJS	= $(GBDPLIBSRC:.cc=.o)


all:

# NOTE: $(SRCDIR) added to the dependencies, because in ../../Makefile.in the libs
#       depend also on this dir

../GBDB.so-$(PLATFORM): $(GBDBLIBOBJS)
	$(DYNLD) -o $@ $(GBDBLIBOBJS) $(LDFLAGS) $(GECODE_LIBS)
	
../libGBDB.a: $(GBDBLIBOBJS)
	$(AR) -rc $@ $(GBDBLIBOBJS) && $(RANLIB) $@

../GBDP.so-$(PLATFORM): $(GBDPLIBOBJS)
	$(DYNLD) -o $@ $(GBDPLIBOBJS) $(LDFLAGS) $(GECODE_LIBS)
	
../libGBDP.a: $(GBDPLIBOBJS)
	$(AR) -rc $@ $(GBDPLIBOBJS) && $(RANLIB) $@


depend:: Makefile $(GBDBLIBSRC) $(GBDPLIBSRC)
	$(DEPEND) $(GBDBLIBSRC:%=$(SRCDIR)/%) $(GBDPLIBSRC:%=$(SRCDIR)/%) \
		| sed -e 's/\.o:/\.lo:/g' > Makefile.deps

%.o: %.cc
	$(CXX) $(OPTIMIZE) $(CFLAGS) -c $< -o $@

Makefile: Makefile.in
	(cd ..; ./config.status)

-include Makefile.deps
include ../Makefile.rules

distclean::
	-rm -f Makefile makefile $(GENERATED_FILES)

veryclean::
	-rm -f *.a *.so-$(PLATFORM) TAGS Makefile.deps $(GENERATED_FILES)

cleaner::
	-rm -f *.a *.so-$(PLATFORM) $(GENERATED_FILES)


BUILDDIR=$(shell pwd)
tags:	$(CREATEDFILES)
	etags \
	--regex='/OZ_BI_\(io\)?define([ 	]*\([^ 	,)]+\)/\2/' \
	--regex='/OZ_C_\(io\)?proc_begin([ 	]*\([^ 	,)]+\)/\2/' \
	--regex='/OZ_DECLARE[A-Z0-9_]*([ 	]*\([^ 	,)]+\)/\1/' -l c++ \
	-o $(SRCDIR)/TAGS \
	$(addprefix $(BUILDDIR)/,$(CREATEDFILES)) \
	$(SRCDIR)/*c $(SRCDIR)/*h $(SRCDIR)/../*c $(SRCDIR)/../*h  
