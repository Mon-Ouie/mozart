#!/bin/sh

tarplat()
{
   link=$1
   plat=$2
   tarfile=ozemacs-$link.tar.Z
   echo "Creating $tarfile..."
   tar -cf - oz/ozemacs/bin/$plat oz/ozemacs/bin/$link | compress > $pwd/$tarfile
  
}

OZHOME=/usr/share/gs/oz
pwd=`pwd`

cd $OZHOME
cd ..

temp=/tmp/excl$$
trap "rm -f $temp" 0 1 15

echo "ozemacs/bin" > $temp

#set -x
tar -X $temp -cvf - oz/ozemacs | compress > $pwd/ozemacs-common.tar.Z


tarplat sunos-sparc   sparc-sun-sunos4.1.3
tarplat hpux-700      hppa1.1-hp-hpux9
tarplat irix5-mips    mips-sgi-irix5.2
tarplat ultrix-mips   mips-dec-ultrix4.2
tarplat solaris-sparc sparc-sun-solaris2.3
tarplat linux-i486    i486-unknown-linux


