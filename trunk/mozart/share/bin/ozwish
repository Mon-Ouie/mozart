#!/bin/sh
OZWISHHOME=$OZHOME/ozwish
BLTWISH=$OZWISHHOME/platform/$OZPLATFORM/blt_wish
if [ -x  $BLTWISH ]
then
  TCL_LIBRARY=$OZWISHHOME/tcl/lib/tcl
  TK_LIBRARY=$OZWISHHOME/tcl/lib/tk
  export TCL_LIBRARY
  export TK_LIBRARY
  exec $BLTWISH "$@"
fi

# if ozwish failed
exec blt_wish "$@"

# if blt_wish failed
exec wish "$@"
