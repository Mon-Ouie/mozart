@SET_MAKE@
BUILDTOP	= @BUILDTOP@
SRCTOP		= @SRCTOP@
PREFIX		= @prefix@
SRCDIR          = @srcdir@
VPATH           = @srcdir@
PLATFORM	= @PLATFORM@
LIB_DIR1	= $(PREFIX)/contrib
LIB_DIR		= $(PREFIX)/contrib/io
HOMEURL         = @HOMEURL@

OZC		= @OZC@
OZDYNLD		= @OZDYNLD@

CXX		= @CXX@
CPPFLAGS	= -I$(SRCTOP)/platform/emulator \
		  -I$(BUILDTOP)/platform/emulator \
		  -I$(PREFIX)/include @CPPFLAGS@
CXXFLAGS	= $(CFLAGS)
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@

INSTALL		= @INSTALL@
INSTALL_DIR	= @INSTALL_DIR@
INSTALL_LIB	= $(INSTALL) -m 444

FUNCTORS	= mode.ozf
LIB_FUNCTORS	= $(addprefix $(LIB_DIR)/,$(FUNCTORS))
IOFUNCTOR	= io.ozf
LIB_IOFUNCTOR	= $(addprefix $(LIB_DIR1)/,$(IOFUNCTOR))
NATIVES		= process.so-$(PLATFORM)
NATIVES1	= $(addsuffix -$(PLATFORM),$(NATIVES))
LIB_NATIVES	= $(addprefix $(LIB_DIR)/,$(NATIVES1))
IONATIVE	= io.so-$(PLATFORM)
IONATIVE1	= $(addsuffix -$(PLATFORM),$(IONATIVE))
LIB_IONATIVE	= $(addprefix $(LIB_DIR1)/,$(IONATIVE1))

.PHONY: all install clean veryclean distclean bootstrap depend

all:		$(IOFUNCTOR) $(IONATIVE) \
		$(FUNCTORS) $(NATIVES)
install:	$(LIB_DIR) \
		$(LIB_IOFUNCTOR) $(LIB_IONATIVE) \
		$(LIB_FUNCTORS) $(LIB_NATIVES)

$(LIB_DIR):
	$(INSTALL_DIR) $@

$(LIB_IOFUNCTOR): $(LIB_DIR1)/% : %
	$(INSTALL_LIB) $< $@

$(LIB_IONATIVE): $(LIB_DIR1)/%.so-$(PLATFORM) : %.so-$(PLATFORM)
	$(INSTALL_LIB) $< $@

$(LIB_FUNCTORS): $(LIB_DIR)/% : %
	$(INSTALL_LIB) $< $@

$(LIB_NATIVES): $(LIB_DIR)/%.so-$(PLATFORM): %.so-$(PLATFORM)
	$(INSTALL_LIB) $< $@

%.ozf: %.oz
	$(OZC) -c $< -o $@

%.so-$(PLATFORM): %.o
	$(OZDYNLD) $< -o $@ $(LDFLAGS) $(LIBS)

%.o: %.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

clean veryclean:
	-$(RM) *~ *.ozf *.so-* *.o

distclean: veryclean
	-$(RM) config.* Makefile

include $(SRCTOP)/share/Makefile.boot

bootstrap: boot-all

#---------------------------------------------------------------------
# Automatic Makefile update
#---------------------------------------------------------------------

Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./config.status --recheck
