@SET_MAKE@
BUILDTOP        = @BUILDTOP@
SRCTOP          = @SRCTOP@
SRCDIR          = @srcdir@
VPATH           = @srcdir@
PREFIX          = @prefix@
PLATFORM        = @PLATFORM@
LIB_DIR         = $(PREFIX)/cache/x-oz/contrib
HOMEURL         = @HOMEURL@

OZC             = @OZC@
OZL             = @OZL@
COMPILE         = $(OZC) -c
OZTOOL          = @OZTOOL@

INCS            = -I$(SRCTOP)/platform/emulator \
                  -I$(BUILDTOP)/platform/emulator \
                  -I$(PREFIX)/include \
                  -I. \
                  -I/usr/local/oz/include

CPPFLAGS        = @CPPFLAGS@ $(INCS)
CXXFLAGS        = @CXXFLAGS@
LDFLAGS         = @LDFLAGS@
LIBS            = @LIBS@

INSTALL         = @INSTALL@
INSTALL_DIR     = @INSTALL_DIR@
INSTALL_LIB     = $(INSTALL) -m 444
INSTALL_DLL     = $(INSTALL) -m 555

LIBS            = -lc -lm

CFLAGS          = -Wall
CFLAGS          += $(INCS)

LDFLAGS         = -L$(VPATH)

CXX             = $(OZTOOL) c++
CC              = $(OZTOOL) cc
LD              = $(OZTOOL) ld
DEPEND          = $(CXX) $(CFLAGS) -MM

OZDEPEND        = $(OZC) -c -M

FLEX            = flex
BISON           = bison -v -d

#----------------------------------------------------------------------
# Sources and targets
#----------------------------------------------------------------------

CPPSRCS         = \
                maple.cc \
                builtins.cc

MODULE_SPEC     =

BISONSRCS       = \
                maple2oz.y

FLEXSRCS        = \
                maple2oz.l

GENERATED_CSRCS = \
                $(BISONSRCS:.y=.y.c) \
                $(FLEXSRCS:.l=.l.c)

GENERATED_HSRCS = \
                $(BISONSRCS:.y=.y.h) \

GENERATED_OUTPUT        = \
                $(BISONSRCS:.y=.y.output) \

CSRCS           = $(GENERATED_CSRCS)

OZSRCS          = Maple.oz

OZGSRCS         =

TARGETS         = Maple.ozf maple.so-$(PLATFORM)

LIB_TARGETS     = $(TARGETS:%=$(LIB_DIR)/%)

GENERATED_FILES = $(GENERATED_CSRCS) $(GENERATED_HSRCS) $(GENERATED_OUTPUT)

.PHONY: all install clean veryclean distclean bootstrap depend
.PRECIOUS: $(CPPSRCS:.cc=.o) $(CSRCS:.c=.o) $(GENERATED_FILES)

all:            first $(TARGETS)
install:        $(LIB_DIR) $(LIB_TARGETS)

$(LIB_DIR):
        $(INSTALL_DIR) $@

$(LIB_DIR)/%.ozf: %.ozf
        $(INSTALL_LIB) $< $@

$(LIB_DIR)/%.so-$(PLATFORM): %.so-$(PLATFORM)
        $(INSTALL_DLL) $< $@


first: $(GENERATED_FILES)

#----------------------------------------------------------------------
# Oz part
#----------------------------------------------------------------------

%.ozf: %.oz
        $(OZC) -c $< -o $@

%.ozf: %.ozg
        $(OZC) -c --gump $< -o $@

#----------------------------------------------------------------------
# C part
#----------------------------------------------------------------------

%.so-$(PLATFORM): $(CPPSRCS:.cc=.o) $(CSRCS:.c=.o)
        $(LD) -o $@ $^ $(LDFLAGS) $(LIBS)

%.o: %.cc
        $(CXX) $(OPTIMIZE) $(CFLAGS) -c $< -o $@

%.o: %.c
        $(CC) $(OPTIMIZE) $(CFLAGS) -c $< -o $@

%-table.cc: %.spec
        $(PERL) $(SRCTOP)/platform/emulator/bidecl.perl -file $< -interface > $@

%.y.c %.y.h: %.y
        $(BISON) -o$@ $<

%.l.c: %.l
        $(FLEX) -o$@ $<

#----------------------------------------------------------------------
# Maintenance
#----------------------------------------------------------------------

depend: Makefile $(CPPSRCS) $(OZSRCS) $(OZGSRCS) first
        $(RM) Makefile.deps
        $(DEPEND) $(CPPSRCS:%=$(SRCDIR)/%) >> Makefile.deps
        $(DEPEND) $(CSRCS) >> Makefile.deps
        $(OZDEPEND) $(OZSRCS:%=$(SRCDIR)/%) $(OZGSRCS:%=$(SRCDIR)/%) \
        >> Makefile.deps

clean:
        -$(RM) *.ozf
        -$(RM) *.o
        -$(RM) *.so-$(PLATFORM)
        -$(RM) *.so
        -$(RM) *.l
        -$(RM) *.C
        -$(RM) *~
        -$(RM) $(GENERATED_FILES)

distclean: clean
        -$(RM) config.* Makefile*

include $(SRCTOP)/share/Makefile.boot

bootstrap: boot-all

#----------------------------------------------------------------------
# Automatic Makefile update
#----------------------------------------------------------------------

Makefile: Makefile.in config.status
        ./config.status

config.status: configure
        ./config.status --recheck

#----------------------------------------------------------------------
# Dependencies
#----------------------------------------------------------------------
-include Makefile.deps
