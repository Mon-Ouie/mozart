@SET_MAKE@
BUILDTOP	= @BUILDTOP@
SRCTOP		= @SRCTOP@
PREFIX		= @prefix@
SRCDIR          = @srcdir@
VPATH           = @srcdir@
PLATFORM	= @PLATFORM@
LIB_DIR		= $(PREFIX)/contrib/os

OZC		= @OZC@
OZDYNLD		= @OZDYNLD@

CXX		= @CXX@
CPPFLAGS	= -I$(SRCTOP)/platform/emulator \
		  -I$(BUILDTOP)/platform/emulator \
		  -I$(PREFIX)/include @CPPFLAGS@
CXXFLAGS	= $(CFLAGS)
LDFLAGS		= @LDFLAGS@
LIBS		= @LIBS@

INSTALL		= @INSTALL@
INSTALL_DIR	= @INSTALL_DIR@
INSTALL_LIB	= $(INSTALL) -m 444

FUNCTORS	= mode.ozf io.ozf process.ozf open.ozf
NATIVES		= io.so process.so

LIB_FUNCTORS	= $(addprefix $(LIB_DIR)/,$(FUNCTORS))
PNATIVES	= $(addsuffix -$(PLATFORM),$(NATIVES))
LIB_NATIVES	= $(addprefix $(LIB_DIR)/,$(PNATIVES))

.PHONY: all install clean veryclean distclean bootstrap depend

all:		$(FUNCTORS) $(NATIVES)
install:	$(LIB_DIR) $(LIB_FUNCTORS) $(LIB_NATIVES)

$(LIB_DIR):
	$(INSTALL_DIR) $@

$(LIB_FUNCTORS): $(LIB_DIR)/% : %
	$(INSTALL_LIB) $< $@

$(LIB_NATIVES): $(LIB_DIR)/%.so-$(PLATFORM): %.so
	$(INSTALL_LIB) $< $@

%.ozf: %.oz
	$(OZC) -c $< -o $@

%.so: %.o
	$(OZDYNLD) $< -o $@ $(LDFLAGS) $(LIBS)

%.o: %.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

clean veryclean:
	-$(RM) *~ *.ozf *.so *.o

distclean: veryclean
	-$(RM) config.* Makefile

include $(SRCTOP)/share/Makefile.boot

bootstrap: boot-all

#---------------------------------------------------------------------
# Automatic Makefile update
#---------------------------------------------------------------------

Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./config.status --recheck
